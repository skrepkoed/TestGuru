<h1>Leave us your  Feedback!</h1>

<div class="container col-12 col-md-8 border border-success mt-10">
  <%= form_with url: feedback_path, local: true, class: 'form-group' do |form |%>
  <div class="form-group">
    <%= form.label :subject  %>
    <br>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :feedback%>
    <br>
    <%= form.text_area :feedback, class: 'form-control', rows: 10%>
  </div>
  <div class="actions">
    <%= form.submit 'Send feedback', class: 'btn btn-success'%>
  </div>
  <%end%>
</div>