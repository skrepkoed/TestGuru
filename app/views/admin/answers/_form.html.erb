<%= render '/shared/errors', resource: answer%>
<%= form_with(model: [:admin, *answer], local: true) do |form| %>
    <p>
		<%= form.label :body%>
		<%= form.text_area :body, rows:7, cols:60%>
	</p>

	<p>
		<%= form.label :correct%>
		<%= form.check_box :correct, id: :answer_correct%>
	</p>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', admin_question_path(@question)%>
