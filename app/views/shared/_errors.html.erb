<% resource.each do |resource|%>

<% if resource.present? && resource.errors.present?%>
	
  <%= content_tag :div, class: 'resource-errors', data: {resource_id: resource.id} do %>
		<h2> <%= t('.errors_counter', count: resource.errors.count) %>:</h2>
		<ul>
			<%resource.errors.full_messages.each do  |message|%>
			<li><%= message%></li>
			<%end%>
		</ul>
	<% end %>
<%end%>

<%end%>

