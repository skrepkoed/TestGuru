<h1><%= t( '.completed', test: @test_passage.test.title)%> </h1>
 <%= render 'test_passages/progress_bar', test_passage: @test_passage%>

  <div class="form-group col-12 col-md-3 ml-3 mt-5">
    <div clas="card">
      <%if  @test_passage.test_success?%>
      <div class="card-body border border-success">
          <h5 class='card-title'> <%= t('.success', user: current_user.username, result: @test_passage.test_result)%></h5>
      </div>
      <%else%>
        <div class="card-body border border-danger">
        	<h5 class='card-title'><%= t('.fail', user: current_user.username, result: @test_passage.test_result)%></h5>
        </div>
      <%end%>
        <p><%= button_to t('.back'), tests_path, class: "btn btn-primary", method: :get %></p>
      </div>
    </div>
  </div>